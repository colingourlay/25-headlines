#new-headline,
.edit {
    position: relative;
    margin: 0;
    width: 100%;
    font-size: 24px;
    font-family: inherit;
    line-height: 1.4em;
    border: 0;
    outline: none;
    color: inherit;
    padding: 6px;
    // border: 1px solid #999;
    border: 0;
    box-shadow: inset 0 0 2px 0 rgba(0, 0, 0, 0.2);
    -moz-box-sizing: border-box;
    -ms-box-sizing: border-box;
    -o-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-font-smoothing: antialiased;
    -moz-font-smoothing: antialiased;
    -ms-font-smoothing: antialiased;
    -o-font-smoothing: antialiased;
    font-smoothing: antialiased;
}

@media (max-width: 480px) {
    #new-headline,
    .edit {
        font-size: 18px;
    }
}

#new-headline {
    padding: 7px 55px;
    border: none;
    // background: rgba(0, 0, 0, 0.025);
    z-index: 2;
    box-shadow: none;
}

#main {
    position: relative;
    z-index: 2;
    border-top: 10px solid #333;
}

#headline-list {
    margin: 0;
    padding: 0;
    list-style: none;
}

#headline-list li {
    position: relative;
    font-size: 24px;
}

@media (max-width: 480px) {
    #headline-list li {
        font-size: 18px;
    }
}

#headline-list li:nth-child(odd) {
    background-color: rgba(0,0,0,0.025);
}

#headline-list li.editing .edit {
    display: block;
    width: 100%;
    height: 51px;
    padding: 10px 55px;
    line-height: 1.2;
    margin: 0;
    resize: none;
}

#headline-list li.editing .view {
    display: none;
}

#headline-list li .toggle {
    text-align: center;
    width: 40px;
    /* auto, since non-WebKit browsers doesn't support input styling */
    height: auto;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto 0;
    cursor: pointer;
    /* Mobile Safari */
    border: none;
    -webkit-appearance: none;
    -ms-appearance: none;
    -o-appearance: none;
    appearance: none;
}

#headline-list li .toggle:after {
    content: '★';
    /* 40 + a couple of pixels visual adjustment */
    line-height: 43px;
    font-size: 20px;
    color: #d9d9d9;
    // text-shadow: 0 -1px 0 #bfbfbf;
}

#headline-list li .toggle:checked:after {
    color: gold;
    // text-shadow: 0 1px 0 rgba(0,0,0,0.2);
    // text-shadow: none;
}

#headline-list li label {
    // white-space: pre;
    // word-break: break-word;
    padding: 10px 55px 10px 15px;
    margin-left: 40px;
    display: block;
    line-height: 1.2;
    // color: #a9a9a9;
    color: #999;
    -webkit-transition: color 0.4s;
    transition: color 0.4s;
}

#headline-list li.shortlisted label {
    color: #333;
}

#headline-list li .destroy {
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 40px;
    height: 40px;
    margin: auto 0;
    font-size: 22px;
    color: #d9d9d9;
    -webkit-transition: all 0.2s;
    transition: all 0.2s;
    cursor: pointer;
}

#headline-list li .destroy:after {
    content: '✖';
    // text-shadow: 0 -1px 0 #bfbfbf;
}

#headline-list li .edit {
    display: none;
}

#headline-list li.editing:last-child {
    margin-bottom: -1px;
}

@media screen and (-webkit-min-device-pixel-ratio:0) {
    #headline-list li .toggle {
        height: 40px;
    }
}

#footer {
    color: #777;
    padding: 20px 15px;
    position: absolute;
    right: 0;
    left: 0;
    z-index: 1;
    text-align: center;
}

#share {
    float: left;
    font-size: 1.5em;
}

#credits {
    float: right;
}

#credits a {
    color: #d5d5d5;
    text-decoration: none;
}

.hidden {
    display: none;
}

hr {
    margin: 20px 0;
    border: 0;
    border-top: 1px dashed #C5C5C5;
    border-bottom: 1px dashed #F7F7F7;
}
